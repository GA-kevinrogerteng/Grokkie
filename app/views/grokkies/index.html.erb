
<div class="hide-for-small" id="header_wrapper">
  <div class="row">
    <div class="medium-4 large-4 columns" id="logo">
      <h1> Grokkie </h1>
    </div>
    <div class="medium-6 large-4 columns" id="navbar_actions">
      <ul>
        <li>My Profile</li>
        <li>Sign Up</li>
        <li>Sign In</li>
      </ul>
    </div>

  </div>
  <div class="row">  
    <div class="large-12 columns" id="tagline"><h5>This is our tagline</h5></div>
  </div>  
  <div class="row" id="about_us_wrapper">   
    <div class="medium-4 large-4 columns about_us_column">Column 1</div>
    <div class="medium-4 large-4 columns about_us_column">Column 2</div>
    <div class="medium-4 large-4 columns about_us_column">Column 3</div>
  </div>
  <div class="row">
    <div class="medium-5 large-4 columns">Find out more about our team</div>
    <div class="medium-4 large-2 columns"><a class="small button">Create a Roadmap</a></div>
  </div>    
</div>


<div class="small-12 medium-12 large-12 columns search_wrapper">
  <div class="row"><h4>Search Grokkie</h4></div>
</div>

<div class="row">
  <div class="hide-for-small medium-3 large-3 columns">
    <h5> Roadmap your way to success:</h5>
  </div>

  <div class="small-12 medium-8 large-9 columns">
    <ul id="featured_categories">
  	<% @categories.each do |category| %>
  	  <div id="category_circles">
        <li><%= category.name %></li>
      </div> 
          <%category.skills.each do |skill| %>
  	      <%=link_to skill.name, category_skill_path(category, skill)%>
  	    <% end %>
  	<% end %>
    </ul>
  </div>
</div>


<div class="row">
  <div class="small-6 medium-6 large-6 columns">
    Featured Roadmaps:
  </div>
</div>

