<div class="row">
  <div class="hide-for-small medium-3 large-3 columns">
    <h5> Roadmap your way to success:</h5>
  </div>

  <div class="small-12 medium-8 large-9 columns">
    <ul id="drop1" class="f-dropdown" data-dropdown-content>
  	 <% @categories.each do |category| %>
  	  <div id="category_circles"><li><%= category.name %></li></div> 
  	    <ul id="dropdown">
          <%category.skills.each do |skill| %>
  	      <li><%=link_to skill.name, category_skill_path(category, skill)%></li>
  	    <% end %>
        </ul>
  	<% end %>
    </ul>
  </div>
</div>

