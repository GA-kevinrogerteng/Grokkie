<%= form_for @roadmap do |f| %>

  Select a Category<br>

<%= collection_select(:post, :category_id, @categories, :id, :name, prompt: true) %><br>

  Select Skill<br>
<%= collection_select(:post, :skill_id, @skills, :id, :name, prompt: true) %><br>

<%= select "skill", "id", @skills.map{|s| [s.name, s.id]}, {}, data: { behavior: 'skill_dropdown' } %>

	  <%= f.label :title %>
	  <%= f.text_field :title, placeholder: "Title" %><br>
	  <%= f.label :description %>
	  <%= f.text_area :description, placeholder: "Description" %><br>
	  <%= f.submit %>
 <% end %>